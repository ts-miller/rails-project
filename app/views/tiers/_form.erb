<%= form_with model: @tier, local: true do |f| %>
    <%= f.hidden_field :creator_id, :value => @creator.id %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "field-space" %><br>
    <%= f.label :amount, "Amount $" %>
    <%= f.number_field :amount, class: "field-space" %><br>
    <%= f.label :description, class: "desc-label" %>
    <%= f.text_area :description, cols: 40, rows: 10, class: "field-space" %><br>

    <%= f.submit class: "button" %>
<% end %>